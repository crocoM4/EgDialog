<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/egDialogSingleChoiceContainerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/eg_dialog_single_choice_item_padding_vertical"
    android:paddingBottom="@dimen/eg_dialog_single_choice_item_padding_vertical"
    android:paddingStart="@dimen/eg_dialog_single_choice_item_padding_horizontal"
    android:paddingEnd="@dimen/eg_dialog_single_choice_item_padding_horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/egDialogSingleChoiceDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/EgDialogSingleChoiceItemDescriptionStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/egDialogSingleChoiceRadioSelect"/>

    <RadioButton
        android:id="@+id/egDialogSingleChoiceRadioSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/egDialogSingleChoiceDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>
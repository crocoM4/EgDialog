        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <!--<item name="android:background">@android:color/transparent</item>-->
    </style>

    <style name="EgDialogContentStyle">
        <item name="android:paddingTop">@dimen/eg_dialog_content_padding_vertical</item>
        <item name="android:paddingRight">@dimen/eg_dialog_content_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/eg_dialog_content_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/eg_dialog_content_padding_horizontal</item>
    </style>

    <style name="EgDialogTitleStyle">
        <item name="android:textSize">@dimen/eg_dialog_title_text_size</item>
        <item name="android:textColor">@color/colorEgDialogTitle</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="EgDialogDescriptionStyle">
        <item name="android:textSize">@dimen/eg_dialog_description_text_size</item>
        <item name="android:textColor">@color/colorEgDialogDescription</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">@dimen/eg_dialog_title_margin_vertical</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="EgDialogContentCustomViewStyle">
        <item name="android:layout_marginBottom">@dimen/eg_dialog_description_margin_vertical</item>
    </style>

    <style name="EgDialogActionStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/eg_dialog_action_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginBottom">@dimen/eg_dialog_action_margin_vertical</item>
    </style>

    <style name="EgDialogActionStyleNegative" parent="EgDialogActionStyle">
        <item name="android:textColor">@color/colorTextEgDialogActionNegative</item>
        <item name="android:background">@drawable/background_action_negative_eg_dialog</item>
        <item name="android:layout_marginRight">@dimen/eg_dialog_actions_margin</item>
    </style>

    <style name="EgDialogActionStylePositive" parent="EgDialogActionStyle">
        <item name="android:textColor">@color/colorTextEgDialogActionPositive</item>
        <item name="android:background">@drawable/background_action_positive_eg_dialog</item>
        <item name="android:layout_marginRight">@dimen/eg_dialog_action_margin_horizontal</item>
    </style>

    <!-- Single choice -->

    <style name="EgDialogSingleChoiceItemDescriptionStyle">
        <item name="android:textSize">@dimen/eg_dialog_single_choice_description_text_size</item>
        <item name="android:textColor">@color/colorEgDialogSingleChoiceDescripton</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- Progress -->
    <style name="EgDialogProgressLabelStyle">
        <item name="android:textSize">@dimen/eg_dialog_description_text_size</item>
        <item name="android:textColor">@color/colorEgDialogDescription</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>